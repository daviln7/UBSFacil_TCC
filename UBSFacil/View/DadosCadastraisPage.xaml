<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UBSFacil.View.DadosCadastraisPage"
             Title="Meus Dados"
             BackgroundColor="Lavender">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Meus Dados Cadastrais"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black"
                   Margin="0,0,0,10" />

            <Label Text="Nome Completo:"
                   FontSize="16"
                   TextColor="Black" />
            <Entry x:Name="EntryNomeCompleto"
                   Placeholder="Seu nome completo"
                   TextColor="Black"
                   PlaceholderColor="LightGray"
                   Keyboard="Text"
                   BackgroundColor="White" />
            <Label Text="Email:"
                   FontSize="16"
                   TextColor="Black" />
            <Entry x:Name="EntryEmail"
                   Placeholder="seu.email@exemplo.com"
                   TextColor="Black"
                   PlaceholderColor="LightGray"
                   Keyboard="Email"
                   BackgroundColor="White" />
            <Label Text="Telefone:"
                   FontSize="16"
                   TextColor="Black" />
            <Entry x:Name="EntryTelefone"
                   Placeholder="(XX) XXXXX-XXXX"
                   TextColor="Black"
                   PlaceholderColor="LightGray"
                   Keyboard="Telephone"
                   BackgroundColor="White" />
            <Label Text="Nova Senha (deixe em branco para manter a atual):"
                   FontSize="16"
                   TextColor="Black" />
            <Entry x:Name="EntryNovaSenha"
                   Placeholder="Nova senha"
                   IsPassword="True"
                   TextColor="Black"
                   PlaceholderColor="LightGray"
                   BackgroundColor="White" />
            <Button Text="Atualizar Dados"
                    Clicked="OnAtualizarDadosClicked"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="#7B68EE" TextColor="White"
                    CornerRadius="10"
                    Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>